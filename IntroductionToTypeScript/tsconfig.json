{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "esModuleInterop": true,
        "sourceMap": true,
        "allowJs": true,
        "lib": ["esnext", "dom"],
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "strict": true,
        "useDefineForClassFields": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": false,
        "noUncheckedIndexedAccess": true
    },
    "ts-node": {
        "esm": true
    },
    "include": ["./src/**/*.ts"]
}
